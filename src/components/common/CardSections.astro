---
interface Props {
  title: string
  subtitle: string
  colSpan: string
}

const { title, subtitle, colSpan } = Astro.props
---

<article
  class=`relative bg-surface flex flex-col justify-center col-span-${colSpan} gap-4 rounded p-4`
>
  <div class="flex items-center justify-between">
    <div class="flex flex-col justify-between">
      <h2 class="text-2xl font-semibold">{title}</h2>
      <p class="text-sm text-gray-300">{subtitle}</p>
    </div>
    <slot name="actions" />
  </div>
  <slot />
</article>
