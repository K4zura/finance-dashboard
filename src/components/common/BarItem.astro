---
const lang = Astro.params.lang;
interface Props {
	href: string;
  class?: string;
}
const { href, class: className } = Astro.props;
---

<li
  class={`hover:bg-hover group relative flex rounded-lg text-lg font-semibold transition-colors duration-300 ${className}`}
>
  <a
    href={`/${lang}${href}`}
    class="z-20 flex flex-1 select-none items-center gap-2 rounded-lg px-2 py-1.5 text-[0.8rem]"
  >
    <slot />
  </a>
</li>
