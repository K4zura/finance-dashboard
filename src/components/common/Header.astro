---
interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<header class="flex items-center justify-between">
  <div>
    <h1 class="text-4xl font-bold">{title}</h1>
    <p class="font-semibold text-gray-400">{description}</p>
  </div>
  <slot />
</header>
